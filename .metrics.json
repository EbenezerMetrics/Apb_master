  
{
    "builds": {
        "list": [
                   {
                        "name": "sync_fifo",
                        "cmd": "dsim -linebuf -work $ROOT_DIR/dsim_work -top fifo_tb -genimage sync_fifo  +incdir+$ROOT_DIR/ -F $ROOT_DIR/list.f ",
                        "wavesCmd": "dsim -linebuf +acc+rwb  -work $ROOT_DIR/dsim_work -top fifo_tb -genimage sync_fifo  +incdir+$ROOT_DIR/ -F $ROOT_DIR/list.f"
                    }
            ]
    },
    "regressions": [
                     {
                         "name": "sync fifo sanity tests",
                        "description": "Sanity tests for SF",
                       "tests": {
                                "resultsDir": "/mux-flow/results",
                                "builds": ["sync_fifo"],                
                                "list": [
                                    {"name": "x_basic_test",
                                         "iterations": 1,
                                         "timeout": "5h",
                                         "build": "sync_fifo",
                                         "cmd": "cd <resultsDir>;dsim -linebuf -work $ROOT_DIR/dsim_work -image sync_fifo +acc+b  -sv_lib $UVM_HOME/src/dpi/libuvm_dpi.so  ",
                                         "wavesCmd": "cd <resultsDir>;dsim -linebuf -work $ROOT_DIR/dsim_work -image sync_fifo +acc+b  -sv_lib $UVM_HOME/src/dpi/libuvm_dpi.so -waves waves.vcd.gz",
                                         "logFile": "dsim.log",
                                         "wavesFile": "waves.vcd.gz",
                                         "metricsFile": "metrics.db",
                                         "seed": "random",
                                         "isPass": [""]
                                    }]
                                 }
                        }
                     ]
}
